            <input type="text" id="rn" class="reg-inp" placeholder="Full Name">
            <input type="number" id="rm" class="reg-inp" placeholder="Mobile Number">
            <button onclick="wa()" class="wa-btn">SEND TO ADMIN</button>
        </div>
